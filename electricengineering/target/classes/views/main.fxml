<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.electricengineering.controllers.MainController"
            stylesheets="@../styles.css">  <!-- ← ДОБАВЛЕНО ЗДЕСЬ -->
    <children>
        <Label layoutX="120.0" layoutY="50.0" text="Electric Engineering Calculator">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Button layoutX="250.0" layoutY="120.0" mnemonicParsing="false" onAction="#handleOhmCalculator" prefHeight="40.0" prefWidth="200.0" text="Ohm's Law Calculator" />
        <Button layoutX="250.0" layoutY="180.0" mnemonicParsing="false" onAction="#handleDividerCalculator" prefHeight="40.0" prefWidth="200.0" text="Voltage Divider Calculator" />
        <Button layoutX="250.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleHistory" prefHeight="40.0" prefWidth="200.0" text="View History" />
        <Button layoutX="250.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="200.0" text="Logout" />
    </children>
</AnchorPane>