<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.electricengineering.controllers.DividerController"
            stylesheets="@../styles.css">  <!-- ← ДОБАВЛЕНО ЗДЕСЬ -->
    <children>
        <Label layoutX="250.0" layoutY="20.0" text="Voltage Divider Calculator" />
        <Label layoutX="50.0" layoutY="60.0" text="Input Voltage (Vin):" />
        <TextField fx:id="vinField" layoutX="180.0" layoutY="55.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="90.0" text="Output Voltage (Vout):" />
        <TextField fx:id="voutField" layoutX="180.0" layoutY="85.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="120.0" text="Tolerance (%):" />
        <TextField fx:id="toleranceField" layoutX="180.0" layoutY="115.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="150.0" text="Resistor Series:" />
        <ComboBox fx:id="resistorSeries" layoutX="180.0" layoutY="145.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="180.0" text="Min Resistance:" />
        <TextField fx:id="minResistanceField" layoutX="180.0" layoutY="175.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="210.0" text="Max Resistance:" />
        <TextField fx:id="maxResistanceField" layoutX="180.0" layoutY="205.0" prefWidth="100.0" />
        <Button layoutX="50.0" layoutY="250.0" mnemonicParsing="false" onAction="#calculate" text="Calculate" />
        <Button layoutX="150.0" layoutY="250.0" mnemonicParsing="false" onAction="#clear" text="Clear" />
        <Button layoutX="250.0" layoutY="250.0" mnemonicParsing="false" onAction="#back" text="Back" />
        <Pane fx:id="circuitPane" layoutX="350.0" layoutY="60.0" prefHeight="350.0" prefWidth="300.0" style="-fx-border-color: black;" />
    </children>
</AnchorPane>